{% load static %}

<html>
    <head>
      <title>LITReview</title>
      <link rel="stylesheet" href="{% static 'feed/styles.css' %}" />
    </head>
    <body>
      <div id="container">
        <div id="header">
          <div id="branding">
            <h1 id="site-name">
              <a href="{% url 'feed' %}">LITReview</a>
            </h1>
          </div>
          <div id="user-tools">
            {% if user.is_authenticated %}
            Welcome, <strong>{{ user.get_username }}</strong>.
            <a href="{% url 'logout' %}">[logout]</a>
            {% else %}
            <p>You are not connected. Please log in.</p>
            {% endif %}
          </div>
        </div>
        <main>
          {% block content %}{% endblock %}
        </main>
        <footer>
        </footer>
      </div>
    </body>
</html>
